<div class="wrapper">
<div class="form-signin">

<h2 class="form-signin-heading">Ingreso de usuario</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "Ingresar correo", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Ingresar contrasena", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Iniciar sesion", class: "btn btn-lg btn-primary btn-block" %>
  </div>

</div>
</div>

<% end %>



<%= render "devise/shared/links" %>
