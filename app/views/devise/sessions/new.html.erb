<div class="wrapper">
<form class="form-signin">

<h2 class="form-signin-heading">Ingreso de usuario</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <form class="form-signin">

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: "Ingresar correo", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Ingresar contrasena", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "checkbox" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
  </div>
  </form>

<% end %>

<%= render "devise/shared/links" %>
</form>
</div>
