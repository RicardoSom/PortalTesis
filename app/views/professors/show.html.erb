<table class="table table-bordered table-striped">
<tr>
  <%if @professor!=nil %>
  <th>Nombres profesor :
    <%= @professor.name%>
  </th>
  <th>Apellidos profesor :
    <%= @professor.last_name%>
  </th>
  <th>Rut profesor :
    <%= @professor.rut%>
  </th>
  <th>Email :
    email<%= @professor.email%>
  </th>
  <% end %>
</tr>
</table>
<table class='table table-bordered table-striped'>
 <tr>
  <th>Nombre Documento</th>
  <th>Nombre Estudiante</th>
  <th>Nombre Docente</th>
  <th>Editar</th>
  <th>Mostrar</th>
  <th>Ver documento</th>
  </tr>
<% @professor.documents.each do |document| %>
<tr>
  <td><%= document.title %></td>
  <%if document.professor!=nil %>
  <td><%= document.student.name.to_s+' '+document.student.last_name.to_s  %></td>
  <td><%= document.professor.name.to_s+' '+document.professor.last_name.to_s %></td>
  <% end%>

  <td><%= link_to "Editar", edit_document_path(document) , class: "btn btn-info" %></td>
  <td> <%= link_to "Mostrar informacion documento", document , class: "btn btn-primary" %></td>
  <% if (user = current_user).present?  %>
  <td><%= link_to "Eliminar", document, method: :delete, data: { confirm: 'Esta seguro?'},class: "btn btn-danger" %></td>
  <% end %>
  <td><%= link_to "Ver documento", document.attachment_url , class: "btn btn-success" %></td>
</tr>
<% end %>
</table>
