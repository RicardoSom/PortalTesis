<h1>Documentos ingresados</h1>
<p><%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete %></p>
<table>
 <tr>
  <td>namedocument</td>
  <td>namestudent</td>
  <td>lastnamestudent</td>
  <td>nameprofessor</td>
  <td>lastnameprofessor</td>
 </tr>
<% @documents.each do |document| %>
<tr>
  <td><%= document.title %></td>
  <td><%= document.namestudent %></td>
  <td><%= document.lastnamestudent %></td>
  <td><%= document.nameprofessor %></td>
  <td><%= document.lastnameprofessor %></td>
  <td><%= link_to "Editar", edit_document_path(document) %></td>
  <td> <%= link_to "Mostrar", document %></td>
  <td><%= link_to "Eliminar", document, method: :delete, data: { confirm: 'Esta seguro?'} %></td>
  <td><%= link_to "Download document", document.attachment_url %></td>
  <td><%= button_to "Delete",  document, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{document.title}?" %></td>
</tr>
<% end %>
</table>

<%= link_to "Ingresar documento", new_document_path %>
