<div class="jumbotron">
  <h1>Ingresa un nuevo estudiante</h1>
</div>


<%= form_for(@student, :html => {:role => 'form'}) do |f| %>
    <% if @student.errors.any? %>
        <%= pluralize(@student.errors.count, "error") %>

        <% @student.errors.full_messages.each do |actual| %>
            <%= actual %>
        <% end %>
    <% end %>

    <p>
      <%= f.label :rut_estudiante %> <br>
      <%= f.text_field :rut %>
    </p>
    <%= f.submit %>
<% end %>

<%= link_to 'Volver', root_path %>
